        "referenced": {
          "type": "boolean",
          "x-go-name": "Referenced"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "x-go-name": "Timestamp"
        },
        "title": {
          "description": "The Attributes of the resource.",
          "type": "string",
